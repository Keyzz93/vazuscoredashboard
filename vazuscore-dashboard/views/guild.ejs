<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= guild.name %> - VazusCore</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            color: white;
        }

        .navbar {
            background: rgba(0, 0, 0, 0.3);
            backdrop-filter: blur(10px);
            padding: 20px 40px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .navbar h1 {
            font-size: 1.5rem;
        }

        .nav-links {
            display: flex;
            gap: 20px;
            align-items: center;
        }

        .nav-links a {
            color: white;
            text-decoration: none;
            padding: 8px 15px;
            border-radius: 5px;
            transition: background 0.3s;
        }

        .nav-links a:hover {
            background: rgba(255, 255, 255, 0.2);
        }

        .container {
            max-width: 1000px;
            margin: 40px auto;
            padding: 0 20px;
        }

        .guild-header {
            text-align: center;
            margin-bottom: 40px;
            padding: 30px;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 15px;
        }

        .guild-icon {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            border: 3px solid white;
            margin-bottom: 15px;
        }

        .tabs {
            display: flex;
            gap: 10px;
            margin-bottom: 30px;
            background: rgba(0, 0, 0, 0.2);
            padding: 10px;
            border-radius: 10px;
        }

        .tab {
            flex: 1;
            padding: 15px;
            text-align: center;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s;
        }

        .tab:hover {
            background: rgba(255, 255, 255, 0.2);
        }

        .tab.active {
            background: #5865F2;
            font-weight: bold;
        }

        .tab-content {
            display: none;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            padding: 30px;
        }

        .tab-content.active {
            display: block;
        }

        .form-group {
            margin-bottom: 25px;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
            font-size: 1.1rem;
        }

        .form-group input,
        .form-group select,
        .form-group textarea {
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 8px;
            background: rgba(255, 255, 255, 0.2);
            color: white;
            font-size: 1rem;
        }

        .form-group input::placeholder,
        .form-group textarea::placeholder {
            color: rgba(255, 255, 255, 0.6);
        }

        .form-group small {
            display: block;
            margin-top: 5px;
            opacity: 0.7;
        }

        .toggle {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .toggle input[type="checkbox"] {
            width: 60px;
            height: 30px;
            appearance: none;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 15px;
            position: relative;
            cursor: pointer;
            transition: background 0.3s;
        }

        .toggle input[type="checkbox"]:checked {
            background: #57F287;
        }

        .toggle input[type="checkbox"]::before {
            content: '';
            position: absolute;
            width: 26px;
            height: 26px;
            border-radius: 50%;
            background: white;
            top: 2px;
            left: 2px;
            transition: left 0.3s;
        }

        .toggle input[type="checkbox"]:checked::before {
            left: 32px;
        }

        .btn {
            padding: 15px 40px;
            background: #5865F2;
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 1.1rem;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s;
        }

        .btn:hover {
            background: #4752C4;
            transform: translateY(-2px);
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: rgba(255, 255, 255, 0.1);
            padding: 20px;
            border-radius: 10px;
            text-align: center;
        }

        .stat-card h3 {
            font-size: 2rem;
            margin-bottom: 10px;
        }

        .stat-card p {
            opacity: 0.8;
        }

        .success-message {
            background: #57F287;
            color: white;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            display: none;
        }

        .error-message {
            background: #ED4245;
            color: white;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            display: none;
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <h1>ü§ñ VazusCore Dashboard</h1>
        <div class="nav-links">
            <a href="/dashboard">‚Üê Retour aux serveurs</a>
            <a href="/logout">D√©connexion</a>
        </div>
    </nav>

    <div class="container">
        <div class="guild-header">
            <% if (guild.icon) { %>
                <img src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>.png" 
                     alt="<%= guild.name %>" class="guild-icon">
            <% } else { %>
                <div class="guild-icon" style="background: #5865F2; display: flex; align-items: center; justify-content: center; font-size: 2.5rem; margin: 0 auto 15px;">
                    üè∞
                </div>
            <% } %>
            <h1><%= guild.name %></h1>
            <p>Configuration du bot</p>
        </div>

        <div class="tabs">
            <div class="tab active" onclick="switchTab('config')">‚öôÔ∏è Configuration</div>
            <div class="tab" onclick="switchTab('stats')">üìä Statistiques</div>
            <div class="tab" onclick="switchTab('members')">üë• Membres</div>
        </div>

        <div id="success-message" class="success-message"></div>
        <div id="error-message" class="error-message"></div>

        <!-- TAB: Configuration -->
        <div id="config-tab" class="tab-content active">
            <h2>‚öôÔ∏è Configuration du Serveur</h2>
            <form id="config-form">
                <div class="form-group">
                    <label>üëã Salon de Bienvenue</label>
                    <input type="text" name="welcomeChannel" 
                           placeholder="ID du salon (ex: 1234567890)" 
                           value="<%= config.welcomeChannel || '' %>">
                    <small>Clique droit sur un salon ‚Üí Copier l'ID</small>
                </div>

                <div class="form-group">
                    <label>üí¨ Message de Bienvenue</label>
                    <textarea name="welcomeMessage" rows="3" 
                              placeholder="Variables: {user}, {server}, {memberCount}"><%= config.welcomeMessage %></textarea>
                </div>

                <div class="form-group">
                    <label>üëã Salon de D√©part</label>
                    <input type="text" name="leaveChannel" 
                           placeholder="ID du salon" 
                           value="<%= config.leaveChannel || '' %>">
                </div>

                <div class="form-group">
                    <label>üìù Salon de Logs</label>
                    <input type="text" name="logChannel" 
                           placeholder="ID du salon de logs" 
                           value="<%= config.logChannel || '' %>">
                </div>

                <div class="form-group">
                    <label>üé≠ R√¥le Automatique</label>
                    <input type="text" name="autoRoleId" 
                           placeholder="ID du r√¥le √† donner automatiquement" 
                           value="<%= config.autoRoleId || '' %>">
                </div>

                <div class="form-group toggle">
                    <label>üìà Messages de Niveau</label>
                    <input type="checkbox" name="levelUpMessages" 
                           <%= config.levelUpMessages ? 'checked' : '' %>>
                </div>

                <div class="form-group toggle">
                    <label>üîó Anti-Lien</label>
                    <input type="checkbox" name="antiLink" 
                           <%= config.antiLink ? 'checked' : '' %>>
                </div>

                <button type="submit" class="btn">üíæ Sauvegarder</button>
            </form>
        </div>

        <!-- TAB: Statistiques -->
        <div id="stats-tab" class="tab-content">
            <h2>üìä Statistiques du Serveur</h2>
            <div class="stats-grid">
                <div class="stat-card">
                    <h3 id="total-users">-</h3>
                    <p>üë• Membres actifs</p>
                </div>
                <div class="stat-card">
                    <h3 id="total-xp">-</h3>
                    <p>‚≠ê XP Total</p>
                </div>
                <div class="stat-card">
                    <h3 id="total-money">-</h3>
                    <p>üí∞ Argent Total</p>
                </div>
            </div>

            <h3>üèÜ Top 5 Membres</h3>
            <div id="top-users"></div>
        </div>

        <!-- TAB: Membres -->
        <div id="members-tab" class="tab-content">
            <h2>üë• Gestion des Membres</h2>
            <p style="opacity: 0.8; margin-bottom: 20px;">Rechercher et g√©rer les membres du serveur</p>
            <div id="members-list"></div>
        </div>
    </div>

    <script>
        const guildId = '<%= guild.id %>';

        // Switch entre les tabs
        function switchTab(tabName) {
            document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
            
            event.target.classList.add('active');
            document.getElementById(tabName + '-tab').classList.add('active');

            if (tabName === 'stats') loadStats();
            if (tabName === 'members') loadMembers();
        }

        // Sauvegarder la configuration
        document.getElementById('config-form').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const data = {
                welcomeChannel: formData.get('welcomeChannel'),
                welcomeMessage: formData.get('welcomeMessage'),
                leaveChannel: formData.get('leaveChannel'),
                logChannel: formData.get('logChannel'),
                autoRoleId: formData.get('autoRoleId'),
                levelUpMessages: formData.get('levelUpMessages') === 'on' ? 'true' : 'false',
                antiLink: formData.get('antiLink') === 'on' ? 'true' : 'false'
            };

            try {
                const response = await fetch(`/api/guild/${guildId}/config`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                const result = await response.json();
                
                const successMsg = document.getElementById('success-message');
                successMsg.textContent = result.message;
                successMsg.style.display = 'block';
                setTimeout(() => successMsg.style.display = 'none', 3000);
            } catch (error) {
                const errorMsg = document.getElementById('error-message');
                errorMsg.textContent = 'Erreur lors de la sauvegarde !';
                errorMsg.style.display = 'block';
                setTimeout(() => errorMsg.style.display = 'none', 3000);
            }
        });

        // Charger les statistiques
        async function loadStats() {
            try {
                const response = await fetch(`/api/guild/${guildId}/stats`);
                const data = await response.json();
                
                document.getElementById('total-users').textContent = data.totalUsers;
                document.getElementById('total-xp').textContent = data.totalXP.toLocaleString();
                document.getElementById('total-money').textContent = data.totalMoney.toLocaleString() + '‚Ç¨';
                
                const topUsersDiv = document.getElementById('top-users');
                topUsersDiv.innerHTML = data.topUsers.map((u, i) => `
                    <div style="background: rgba(255,255,255,0.1); padding: 15px; border-radius: 10px; margin: 10px 0;">
                        ${i === 0 ? 'ü•á' : i === 1 ? 'ü•à' : i === 2 ? 'ü•â' : 'üèÖ'} 
                        <strong>User ${u.id}</strong> - Niveau ${u.level} (${u.xp} XP) - ${u.money}‚Ç¨
                    </div>
                `).join('');
            } catch (error) {
                console.error('Erreur chargement stats:', error);
            }
        }

        // Charger les membres
        async function loadMembers() {
            try {
                const response = await fetch(`/api/guild/${guildId}/members`);
                const members = await response.json();
                
                const membersDiv = document.getElementById('members-list');
                membersDiv.innerHTML = members.map(m => `
                    <div style="background: rgba(255,255,255,0.1); padding: 20px; border-radius: 10px; margin: 10px 0;">
                        <strong>User ${m.id}</strong><br>
                        üìà Niveau: ${m.level} | ‚≠ê XP: ${m.xp} | üí∞ Argent: ${m.money}‚Ç¨ | üè¶ Banque: ${m.bank}‚Ç¨
                    </div>
                `).join('');
            } catch (error) {
                console.error('Erreur chargement membres:', error);
            }
        }
    </script>
</body>
</html>
